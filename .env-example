# ==== APP CONFIG ====
VITE_APP_NAME=MyApp
VITE_APP_ENV=development           # Hoặc: production
VITE_APP_VERSION=1.0.0
VITE_APP_PORT=5173

# ==== BACKEND API ====
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000             # Thời gian timeout cho request (ms)

# ==== AUTH ====
VITE_AUTH_TOKEN_KEY=auth_token     # Key lưu token trong localStorage hoặc cookie
VITE_AUTH_HEADER=Authorization     # Tên header để gửi token
VITE_AUTH_PREFIX=Bearer            # Prefix của token (nếu cần)

# ==== FIREBASE (nếu dùng) ====
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ==== FEATURE FLAGS ====
VITE_FEATURE_LOGIN=true
VITE_FEATURE_CHAT=false

# ==== 3RD PARTY (ví dụ Stripe, Google Maps, etc) ====
VITE_STRIPE_PUBLIC_KEY=
VITE_GOOGLE_MAPS_API_KEY=
